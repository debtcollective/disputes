{
  "name": "@debtcollective/disputes-backend",
  "version": "0.8.1",
  "description": "Dispute Tools back-end",
  "main": "index.js",
  "license": "BSD-3-Clause",
  "private": true,
  "scripts": {
    "build": "babel src -d build",
    "db:migrate": "babel-node node_modules/.bin/knex migrate:latest --knexfile ./src/knexfile.js",
    "db:migrate:down": "babel-node node_modules/.bin/knex migrate:down --knexfile ./src/knexfile.js",
    "db:test:prepare": "NODE_ENV=test yarn db:migrate",
    "debug": "nodemon --inspect --exec babel-node src/index.js",
    "now-build": "yarn build",
    "pre-commit": "lint-staged",
    "setup:ci": "yarn db:test:prepare",
    "start": "nodemon --exec babel-node src/index.js",
    "test": "jest --watch",
    "test:ci": "yarn test:coverage",
    "test:coverage": "jest --coverage --verbose --color"
  },
  "dependencies": {
    "@debtcollective/models": "^0.8.1",
    "@debtcollective/tools": "^0.8.1",
    "apollo-server-express": "2.8.1",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "graphql": "14.4.2",
    "graphql-type-json": "0.3.0",
    "knex": "0.19.1",
    "lodash": "4.17.14",
    "nconf": "0.10.0",
    "objection": "1.6.9",
    "pg": "7.11.0"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/node": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "babel-plugin-import-graphql": "2.7.0",
    "eslint": "6.0.1",
    "eslint-plugin-flowtype": "3.11.1",
    "eslint-plugin-graphql": "3.0.3",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.15.0",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.2.1",
    "flow-bin": "0.104.0",
    "jest": "24.8.0",
    "lint-staged": "9.2.1",
    "nodemon": "1.19.1",
    "prettier-eslint-cli": "5.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "flow focus-check",
      "git add"
    ],
    "*.{json,md}": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
