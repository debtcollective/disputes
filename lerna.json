{
  "npmClient": "yarn",
  "packages": [
    "apps/*"
  ],
  "version": "0.1.0",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "conventionalCommits": true,
      "githubRelease": true
    }
  }
}
