{
  "name": "@debtcollective/disputes",
  "private": true,
  "repository": "https://github.com/debtcollective/disputes.git",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "pretty-quick": "pretty-quick",
    "pre-commit": "lerna run pre-commit --concurrency 1 --since HEAD"
  },
  "devDependencies": {
    "husky": "2.2.0",
    "lerna": "3.13.4",
    "prettier": "1.17.0",
    "pretty-quick": "1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn pre-commit",
      "post-commit": "git update-index --again",
      "pre-push": "yarn test"
    }
  }
}
